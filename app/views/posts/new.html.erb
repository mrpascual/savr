<body>
  <div class="container">

  <h1>Add new post</h1>

  <%= form_for @post do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <%= f.submit "Add new post" %>
<% end %>

<%= link_to "Posts", posts_path %>

</div>
</body>
