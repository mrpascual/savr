

<p><%= @post.title %> <%= @post.author %> <%= @post.body %></p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <b>Author:</b>
    <%= comment.author %>
  </p>

  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add comment</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Remove", post_path, method: :delete, data: { confirm: "Delete post?"} %>
<%= link_to "Posts", posts_path %>
